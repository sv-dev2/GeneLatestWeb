@model InsuranceClaim.Models.VRNModel
@{
    ViewBag.Title = "ReprintReciept";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}


<div class="body-content-section">
    <div class="form-section-top">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-section-col">
                    <div class="form-group-section">
                        <div class="form-title">
                            <h4>Reprint Reciept</h4>
                        </div>

                        <div class="form-group-input">
                           
                            @using (Html.BeginForm("SearchRecieptPrint", "CustomerRegistration", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                if (TempData["ErrorMsg"] != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @TempData["ErrorMsg"]
                                    </div>
                                }


                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.PolicyNumber, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.PolicyNumber, new { @class = "form-control", @placeholder = "Policy Number" })
                                            @Html.ValidationMessageFor(x => x.PolicyNumber, "", new { @class = "text-danger" })
                                        </div>
                                    </div>                                
                                </div>
                                


                                @*<input type="submit"  class="btn btn-primary"name="Save"/>*@
                                <div class="col-md-12 next-btn">
                                    <div class="row">
                                    
                                        <div class="col-sm-6 col-md-6">
                                            <div class="text-left" >
                                                <button type="submit" class="btn">Search</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




</div>