@model InsuranceClaim.Models.VehicleUsageModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}


<div class="body-content-section">
    <div class="form-section-top">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-section-col">
                    <div class="form-group-section">
                        <div class="form-title">
                            <h4>Add Vehicle Usage</h4>
                        </div>
                        <div class="form-group-input">
                            @*@using (Ajax.BeginForm("SaveCustomerData", "CustomerRegistration", new AjaxOptions { UpdateTargetId = "CustomerResult", OnSuccess = "GoToProductDetail" }))*@
                            @using (Html.BeginForm("SaveVehicleUsage", "VehicleUsage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.HiddenFor(x => x.Id)

                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-select">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.ProductId, new { @class = "gender-label" })
                                            @Html.DropDownListFor(x => x.ProductId, new SelectList(ViewBag.Products, "Id", "ProductName"), new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.ProductId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.VehUsage, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.VehUsage, new { @class = "form-control", @name = "VehUsage", @autocomplete = "off", @id = "VehUsage", @placeholder = "Enter Veh Usage" })
                                            @Html.ValidationMessageFor(x => x.VehUsage, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.ComprehensiveRate, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.ComprehensiveRate, new { @class = "form-control", @name = "ComprehensiveRate", @autocomplete = "off", @id = "ComprehensiveRate", @placeholder = "Enter Comprehensive Rate" })
                                            @Html.ValidationMessageFor(x => x.ComprehensiveRate, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.USDMinBenchmark, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.USDMinBenchmark, new { @class = "form-control", @name = "USDMinBenchmark", @autocomplete = "off", @id = "USDMinBenchmark", @placeholder = "Enter USD Benchmark" })
                                            @Html.ValidationMessageFor(x => x.USDMinBenchmark, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.ThirdPartyRate, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.ThirdPartyRate, new { @class = "form-control", @name = "ThirdPartyRate", @autocomplete = "off", @id = "ThirdPartyRate", @placeholder = "Enter Third Party Rate" })
                                            @Html.ValidationMessageFor(x => x.ThirdPartyRate, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.MinThirdAmount, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.MinThirdAmount, new { @class = "form-control", @name = "MinThirdAmount", @autocomplete = "off", @id = "MinThirdAmount", @placeholder = "Enter Min Third Amount" })
                                            @Html.ValidationMessageFor(x => x.MinThirdAmount, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.FTPAmount, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.FTPAmount, new { @class = "form-control", @name = "FTPAmount", @autocomplete = "off", @id = "FTPAmount", @placeholder = "Enter FTP Amount" })
                                            @Html.ValidationMessageFor(x => x.FTPAmount, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.AnnualTPAmount, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.AnnualTPAmount, new { @class = "form-control", @name = "AnnualTPAmount", @autocomplete = "off", @id = "AnnualTPAmount", @placeholder = "Enter Annual TP Amount" })
                                            @Html.ValidationMessageFor(x => x.AnnualTPAmount, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                @*<input type="submit"  class="btn btn-primary"name="Save"/>*@
                                <div class="col-md-12 next-btn">
                                    <div class="row">
                                        <div class="col-sm-6 col-md-6">
                                            <div class="text-left">
                                                <button type="button" class="btn" onclick="window.location.href='@Url.Action("VehicleUsageList","VehicleUsage")'">Cancel</button>

                                            </div>
                                        </div>
                                        <div class="col-sm-6 col-md-6">
                                            <div class="text-right">
                                                <button type="submit" class="btn">Add</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




</div>