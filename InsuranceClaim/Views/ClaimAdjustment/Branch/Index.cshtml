@model  IEnumerable<Insurance.Domain.Branch>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}


<div class="productsave-section">
    <div class="container">
        

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 add-btn">
                <div class="">
                    @Html.ActionLink("Create New", "Create")
                </div>
            </div>
        </div>

   
        <div class="product-table-grid">
            <table class="table">
                <tr>
                    <th>
                        Branch
                    </th>
                    <th>ALM Id</th>
                    <th>Partners</th>
                    <th>Location Id</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BranchName)
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.AlmId)  </td>
                        <td>@Html.DisplayFor(modelItem => item.Partners)</td>
                        <td>@Html.DisplayFor(modelItem => item.Location_Id)  </td>
                        <td>@Html.CheckBoxFor(modelItem=>item.Status, new Dictionary<string, object>{
                     {"id", "isActiveStatus"},
                     {"onclick","setActiveStatus("+ item.Id +")"}
                   }) 
                        </td>
                        <td align="center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 
                            @*@Html.ActionLink("Details", "Details", new { id = item.Id })*@ 
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                        </td>
                    </tr>
                }
            </table>
        </div>

    </div>


</div>
<script>


   
     function setActiveStatus(object) {
        
         $.ajax({
             method: "GET",
             url: "branchJson/" + object,
             
         }).done(function (msg) {
             alert("Data Saved: " + msg);
         });

     }
   

</script>






























